{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": "./",
    "paths": {
      "@env": ["./env.ts"],
      "@fn": ["./src/functions"],
    }
  },
  "include": [
    "*.ts",
    "**/**/*.ts",
    "**/**/**/*.ts",
    "src/**/*.tsx"
, "csv/csvReader.js", "prisma/changeProvider.js"  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}